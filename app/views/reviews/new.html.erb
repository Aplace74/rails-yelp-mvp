<h1>Add a review</h1>

<div class="m-3">
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>

<button class="btn btn-secondary m-3"><%= link_to 'go back', restaurants_path %></button>
</div>